{
  "compilerOptions": {
    "target": "ES6",                               
    "module": "commonjs",                           
    "strict": true,                                
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,       
    "outDir": "./dist",                             
    "rootDir": "./src",                            
    "moduleResolution": "node",                     
    "resolveJsonModule": true,                      
    "sourceMap": true,    
    "typeRoots": ["./node_modules/@types", "./types"]                          
  },
  "include": [
    "src/**/*",
    "./src",
    "./types"                                   
  ],
  "exclude": [
    "node_modules",                                 
    "dist"                                          
  ]
}
